<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Welcome">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/i_hate_mondays"/>

    <TextView
        android:id="@+id/lat_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_logo"
        android:text="@string/your_address_text"
        />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lat_long"
        />

    <Button
        android:id="@+id/weather_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GET MY WEATHER!!"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/address"
        style="@style/btnStyleBreakerBay"/>

    <Button
        android:id="@+id/travel_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GET TRAVEL INFO!!"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/weather_button"
        android:layout_centerHorizontal="true"
        style="@style/btnStyleShakespeare"/>

    <Button
        android:id="@+id/enter_info_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ENTER YOUR DESTINATION"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/travel_button"
        android:layout_centerHorizontal="true"
        style="@style/btnStyleSandrift"/>


</RelativeLayout>
</ScrollView>